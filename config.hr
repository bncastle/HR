#This is a comment
variables
    UPX = c:\utils\upx.exe -9
    DestDir = C:\utils
tasks 
    build = haxe build.hxml
    pack = @UPX @DestDir\Hr.exe
    delete = if exist @DestDir\hr.exe.old del @DestDir\hr.exe.old
    rename = ren @DestDir\hr.exe hr.exe.old
    deploy = copy /Y .\bin\Hr.exe @DestDir
    buildDeploy = [:build, :delete, :rename, :deploy :pack]
    bpd = [:build, :pack, :deploy]
    pd = [:pack,:deploy]